}

.user_image {
  float: left;
  object-fit: cover;
  object-position: 50% 0%; /* default value: image is centered*/
  width:250px;
  height:250px;
  padding: 30px;
  border-radius: 50%;
}

.post_image {
  float: left;
  object-fit: cover;
  object-position: 50% 0%; /* default value: image is centered*/
