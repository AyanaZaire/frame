/* STYLE IMAGE BY CLASS */

.grid_image {
  object-fit: cover !important;
  height:300px !important;
  object-position: 50% 0%; /* default value: image is centered*/
}

.critique_image {
  object-fit: cover !important;
  height:40px !important;
