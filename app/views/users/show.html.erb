<h1>User Profile</h1>

  <%= image_tag @user.user_img_url, :alt => @user.name, :class => "user_image" %>
  <h2>Name: <%= @user.name %></h2><br>
  <p>Bio: <%= @user.bio %></p><br><br>

<center>
  <h3>Users Posts:</h3>
    <%= pluralize(@user.posts.count, "post") %>
    <ul>
      <% @user.posts.each do |post| %>
        <div class="gallery">
          <%= image_tag post.post_img_url, :alt => post.title, :class => "grid_image" %>
          <div class="desc"><%= link_to post.title, user_post_path(@user, post)  %></div>
          </div>
      <% end %>
    </ul>



</center>
