<h1>All Posts</h1>


<%= form_tag(posts_path, method: :get) do %>
   <%= text_field_tag :search, params[:search] %>
   <%= submit_tag 'Search', :name => nil %>
<% end %>

<% if flash[:alert] %>
  <div style="color:red"><%= flash[:alert] %></div>
<% end %>


  <% @posts.each do |post| %>
  <div class="gallery">
  <%= image_tag post.post_img_url, :class => "grid_image" %>
  <div class="desc"><%= link_to post.title, post_path(post)  %></div>
  </div>
  <% end %>


